        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/product_image1"/>
                <!--<ImageView-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="60dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:src="@mipmap/add_chart"/>-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btn_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/chart2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart"
                        android:textColor="#3C3C3C"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/line_1"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:text="Coffee Ground Waste For Sale"
                android:textColor="#3C3C3C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_details_background"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/cost"
                        android:textColor="#3C3C3C"
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_free"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:paddingBottom="3dp"
                            android:background="@mipmap/product_free_default_button"
                            android:text="@string/free"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_paid"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:background="@mipmap/product_paid_default_button"
                            android:text="@string/paid"
                            android:textColor="#3C3C3C"
                            android:textSize="10dp"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/btn_bonuschain"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="35dp"
                            android:background="@mipmap/product_bonus_default_button"
                            android:text="@string/bonuschain"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <RelativeLayout
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/bonus_number_background"/>
                                <TextView
                                    android:id="@+id/txt_bonus_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:textColor="#3C3C3C"
                                    android:textSize="11dp"/>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:textColor="#3C3C3C"
                                android:text="@string/bonuschain"
                                android:textSize="8dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/line_1"
                    android:layout_marginHorizontal="10dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/description"
                    android:textSize="14dp"
                    android:textColor="#3C3C3C"/>
                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:text="Nulla eleifend pulvinar purus, molestie euismod odio imperdiet ac. Ut sit amet erat nec nibh rhoncus varius in non lorem. Nulla eleifend pulvinar purus, molestie euismod odio imperdiet ac. Ut sit amet erat nec nibh rhoncus varius in non lorem."
                    android:textSize="14dp"
                    android:textColor="#AEAEAE"
                    app:trimExpandedText="@string/less"
                    app:trimCollapsedText="@string/more"
                    app:colorClickableText="#3D5A96"
                    app:trimMode="trimModeLine"
                    app:trimLines="3"/>
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginTop="15dp"-->
                    <!--android:src="@mipmap/line_1"-->
