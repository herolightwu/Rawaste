<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Main.MainActivity"
    tools:openDrawer="start">
    <include layout="@layout/content_main"/>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3C3C3C"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    android:scaleType="fitStart"
                    android:src="@mipmap/menu_background"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_marginTop="30dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/avata"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/welcome"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Rohit Krishna"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/txt_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="190dp"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/menu_message"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/message"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu_announcements"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_2"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/my_announcements"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu_registered_products"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_3"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/my_orders"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu_sales_purchases"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_4"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/sales_purchases"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu_rawaste_bonuschain"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/rawaste_bonuschain"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu_customer_service"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="40dp"
                                android:src="@mipmap/menu_6"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:text="@string/customer_services"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_signout"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:background="@mipmap/signout_background">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/sign_out"
                                android:textColor="#FFFFFF"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="13dp"/>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:src="@mipmap/sign_out"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>