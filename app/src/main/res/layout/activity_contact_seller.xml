<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ContactSellerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/app_name_cap"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:src="@mipmap/search"/>
            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:src="@mipmap/share2"/>
            <ImageView
                android:id="@+id/btn_bookmark"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:src="@mipmap/bookmark2"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/product_image1"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/add_chart"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btn_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/chart2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart"
                        android:textColor="#3C3C3C"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/line_1"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:text="Coffee Ground Waste For Sale"
                android:textColor="#3C3C3C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_details_background"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/cost"
                        android:textColor="#3C3C3C"
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_free"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:paddingBottom="3dp"
                            android:background="@mipmap/product_free_button"
                            android:text="@string/free"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_paid"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:background="@mipmap/product_paid_button"
                            android:text="@string/paid"
                            android:textColor="#3C3C3C"
                            android:textSize="10dp"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="35dp"
                            android:background="@mipmap/product_bonus_button"
                            android:text="@string/bonuschain"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/btn_bonuschain"
                            android:layout_width="110dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <RelativeLayout
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/bonus_number_background"/>
                                <TextView
                                    android:id="@+id/txt_bonus_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:textColor="#3C3C3C"
                                    android:text="5"
                                    android:textSize="11dp"/>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:textColor="#3C3C3C"
                                android:text="@string/bonuschain"
                                android:textSize="8dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/line_1"
                    android:layout_marginHorizontal="10dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/make_offer"
                    android:textSize="14dp"
                    android:textColor="#3C3C3C"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@mipmap/input_background_white"
                    android:layout_marginHorizontal="20dp">
                    <EditText
                        android:id="@+id/edit_currency"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="10dp"
                        android:textSize="14dp"
                        android:inputType="numberDecimal"
                        android:background="@android:color/transparent"
                        android:hint="@string/euro"/>
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@mipmap/line"/>
                    <ImageView
                        android:id="@+id/img_currency"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/euro"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_camera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/camera"/>
                    <EditText
                        android:id="@+id/edit_message"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="match_parent"
                        android:hint="@string/ask_about_product"
                        android:textSize="9dp"
                        android:background="@mipmap/input_background"
                        android:inputType="text"
                        android:lines="1"/>
                    <ImageView
                        android:id="@+id/btn_send"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/send"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>