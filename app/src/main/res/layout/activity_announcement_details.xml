<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Product.AnnouncementDetailsActivity"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/my_announcements"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxHeight="250dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btn_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/camera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textColor="#3C3C3C"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/input_background"
                android:layout_marginHorizontal="20dp">
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/product_name"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/product_details_background"
                android:layout_marginHorizontal="20dp">
                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="@string/description"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/input_background"
                android:layout_marginHorizontal="20dp">
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/email"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/input_background"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/txt_country"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/country_"
                    android:layout_marginLeft="20dp"
                    android:textSize="17dp"
                    android:textColor="@android:color/black"
                    android:editable="false"
                    android:background="@android:color/transparent"/>
                <com.hbb20.CountryCodePicker
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    app:ccp_showPhoneCode="false"
                    app:ccp_textSize="17dp"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_rememberLastSelection="true">
                </com.hbb20.CountryCodePicker>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/input_background"
                android:layout_marginHorizontal="20dp">
                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/city"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/input_background"
                android:layout_marginHorizontal="20dp">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:ccp_textSize="17dp"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_rememberLastSelection="true">
                </com.hbb20.CountryCodePicker>
                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="@string/phone_number"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:paddingTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/price"
                    android:textColor="#707070"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_free"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:paddingBottom="3dp"
                        android:background="@mipmap/product_free_default_button"
                        android:text="@string/free"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_paid"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@mipmap/product_paid_default_button"
                        android:text="@string/paid"
                        android:textColor="#3C3C3C"
                        android:textSize="10dp"
                        android:textAllCaps="false"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_bonuschain"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@mipmap/product_bonus_default_button"
                        android:text="@string/bonuschain"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:id="@+id/btn_bonuschain"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <RelativeLayout
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/bonus_number_background"/>
                            <TextView
                                android:id="@+id/txt_bonus_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:textColor="#3C3C3C"
                                android:textSize="11dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:textColor="#3C3C3C"
                            android:text="@string/bonuschain"
                            android:textSize="8dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/input_background_white"
                android:layout_marginHorizontal="40dp">
                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:hint="ETH"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line"/>
                <ImageView
                    android:id="@+id/img_currency"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ethereum"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/interested_exchange"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="#707070"/>
                <ImageView
                    android:id="@+id/img_interested"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/check_empty"/>
            </LinearLayout>
